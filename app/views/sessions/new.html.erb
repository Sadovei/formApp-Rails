<h1>Sign in</h1>

<%= form_with model: @person, data: { turbo: false }, url: sign_in_path do |form| %>
    <div class="d-flex flex-column mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "name@domain.com"%>
    </div>

    <div class="d-flex flex-column mb-3">
        <%= form.label :password %>
        <%= form.password_field  :password, placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class:"btn btn-primary" %>
    </div>
<% end %>